{
  "manifest_version": 2,

  "name": "Hide follows",
  "description": "Hides number of followers on Twitter",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["hide_follows.css"],
      "js": ["jquery.min.js","hide_follows.js"]
    }
  ],

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Click here!"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}
